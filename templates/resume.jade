extends layouts/layout

block prepend title
  | #{page.title} -

block content
  .main
    .container
      h2: span 会当凌绝顶，每逐清溪水
      .row
        .span8
          .row
            .span5
              .thumbnail
                img(src="#{page.metadata.avatar}", alt="关于我")
            .span3
              .well
                h3= page.metadata.name
                p= page.metadata.description
              
          .page-header

          != page.html


        .span4
          h3 联系方式
          p
            i.icon.icon-envelope 
            |  #{page.metadata.email}
          p: a(href="#{page.metadata.github}")
            i.icon.icon-github 
            |  #{page.metadata.github}
          p: a(href="#{page.metadata.linkedin}")
            i.icon.icon-linkedin 
            |  #{page.metadata.linkedin}
          p: a(href="#{page.metadata.weibo}")
            i.icon.icon-weibo 
            |  #{page.metadata.weibo}

          a#btnDownload.btn.btn-large.noPrint(href="#{page.metadata.download_url}")
            i.icon.icon-download
            |  下载