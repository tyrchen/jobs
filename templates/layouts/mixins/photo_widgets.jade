mixin thumbnail(url, title)
	.thumbnail
		a.js-fancybox(rel="album", href="#{url}")
			img.photo(src="#{url}", alt="#{title}")
		h4.title= title
		p.exif
	

mixin thumbnails(items)
	.span4
		ul.thumbnails
			for item in items
				- var stats = item.stats
				if stats
					-	var url = item.url;
					li.span4
						+thumbnail(url, '')




