mixin series_posts(post)
  section
    - var posts;
    - if (post.metadata.series) {
    -   posts = _.chain(contents.posts).filter(function(item) {
    -     return post.metadata.series == item.metadata.series
    -   }).sortBy(function(item) {
    -     return item.date
    -   }).value()
    - } else {
    -   posts = []
    - }
    if posts.length
      h4 #{series}
      ul.posts
        each post in posts
          li: a(href="#{post.url}") #{post.title}
